<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".Models.Fragments.CellularDataFragment">
    <TextView
        android:id="@+id/changePassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Cellular Data Use"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/cellularTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="18sp"

        android:text="Data Used- 0.00 MB"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/cancelTextView"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_selection"
        android:gravity="center"
        android:padding="10dp"
        android:text="Back"
        android:textColor="#000000" />
</LinearLayout>
