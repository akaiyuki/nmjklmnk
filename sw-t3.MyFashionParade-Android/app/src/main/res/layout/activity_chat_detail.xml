<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/back_arrow"
                android:visibility="visible" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Suva"
                android:textColor="#FFFFFF" />


            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/settings_contact_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:layout_below="@+id/topLayout"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chatDetailRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/timeTextView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:padding="6dp"
            >
            <ImageView
                android:id="@+id/attachmentIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/attachment_icon"/>

            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/attachmentIcon"
                android:layout_marginLeft="10dp"
                android:hint="Type message...."
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:layout_toLeftOf="@+id/sentTextView"
                />

            <TextView
                android:id="@+id/sentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="Send"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#4F8EF7" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>